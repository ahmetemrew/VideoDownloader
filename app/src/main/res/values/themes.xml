<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - LIGHT THEME -->
    <style name="Theme.VideoDownloader" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background and surface -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/surface_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.VideoDownloader.BottomNavigation</item>
    </style>
    
    <!-- Bottom Navigation Style -->
    <style name="Widget.VideoDownloader.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/surface_light</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.VideoDownloader.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.VideoDownloader.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Text Input Style -->
    <style name="Widget.VideoDownloader.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>
</resources>